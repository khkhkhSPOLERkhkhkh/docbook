
<h1>Index of <em>{{ content.dirname }}</em> <small>Folder map</small></h1>
<hr />
<div class="row-fluid">
    <div class="span1"></div>
    <div class="span10">
    <section>
    <table class="indextable">
    <thead>
        <tr>
            <th>Type</th>
            <th>Name</th>
            <th>Last update</th>
            <th>Size</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
{% for _path in content.dirscan %}
        <tr>
            <td><a href="{{ _path.route }}" title="See this content"><img src="
    {% if _path.type == 'file' %}
                    {{- vendor_assets ~ 'famfamfam_silk_icons_v013/icons/page_white_text_width.png' -}}
    {% else %}
                    {{- vendor_assets ~ 'famfamfam_silk_icons_v013/icons/folder.png' -}}
    {% endif %}" alt="{% if _path.type == 'file' %}file{% else %}dir{% endif %}" /></a></td>
            <td>
                <a href="{{ _path.route }}" title="See this content">{{ _path.name }}</a>
    {% for _trad, _route in _path.trads %}
                &nbsp;[<a href="{{ _route }}" title="{{ _trad }} version of this content">{{ _trad }}</a>]
    {% endfor %}
            </td>
            <td>{{ _path.mtime.format('M j, Y H:i:s') }}</td>
            <td>{{ _path.size }}</td>
            <td>{{ _path.description }}</td>
        </tr>
{% endfor %}
{% if content.dir_has_wip %}
        <tr>
    {% set wippath = content.dirpath ~ '/wip' %}
            <td><a href="{{ wippath|route }}" title="See the work-in-progress of this chapter">
                <img src="{{- vendor_assets ~ 'famfamfam_silk_icons_v013/icons/application_osx_terminal.png' -}}" alt="wip" />
            </a></td>
            <td colspan="4"><small><em>This folder has a "wip" section.</em></small></td>
        </tr>
{% endif %}
    </tbody>
    </table>
    </section>
    </div>
    <div class="span1"></div>
</div>
<hr />
