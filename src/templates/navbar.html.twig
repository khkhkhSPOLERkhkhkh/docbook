
<div class="container-fluid">

    <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
    </button>

    <a class="brand apicon" href="https://github.com/atelierspierrot/docbook" title="Follow sources of DocBook online: https://github.com/atelierspierrot/docbook">
        <img src="{{ assets }}/bouton_plante-24.png" alt="sources" />
    </a>
    <a class="brand" href="/" title="Home of your DocBook">{{ app.title }}</a>

{% if inpage_menu|default('true') != 'false' %}
    <div class="nav-collapse collapse">
        <div class="navbar-text pull-right"><small>
            <ul class="nav" id="navbar_inner">
                <li><a href="#">Inpage navigation</a></li>
                <li class="active"><a href="#top" title="Reach the top ot this page">
                    <span class="visible-phone visible-tablet hidden-desktop">Page Top&nbsp;&uarr;</span>
                    <span class="hidden-phone hidden-tablet visible-desktop">&uarr;</span>
                </a></li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" title="Reach a section in this page">
                    <span class="visible-phone visible-tablet hidden-desktop">Page Sections&nbsp;<b class="caret"></b></span>
                    <span class="hidden-phone hidden-tablet visible-desktop"><b class="caret"></b></span>
                    </a>
                    <ul class="dropdown-menu pull-right" id="inpage_menu"></ul>
                </li>
                <li><a href="#bottom" title="Reach the bottom of this page">
                    <span class="visible-phone visible-tablet hidden-desktop">Page Bottom&nbsp;&darr;</span>
                    <span class="hidden-phone hidden-tablet visible-desktop">&darr;</span>
                </a></li>
                <li><a href="{{ 'docbookdoc'|route }}" title="Read the manual">Help&nbsp;&otimes;</a></li>
            </ul>
        </small></div>
    </div>
{% endif %}

{% if chapters is not empty %}
    <!-- global menu -->
    <ul class="nav">
    {% for _chapter in chapters %}
        <li><a href="{{ _chapter.route }}" title="See this chapter">{{ _chapter.name }}</a></li>
    {% endfor %}
    </ul>
{% endif %}

</div>
